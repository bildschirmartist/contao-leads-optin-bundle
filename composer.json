{
  "name": "cboelter/contao-lead-optin",
  "description": "Opt-In functions for the contao-leads extension",
  "keywords": [
    "contao",
    "leads",
    "contao leads optin",
    "optin"
  ],
  "type": "contao-module",
  "homepage": "https://boelter.eu",
  "license": "LGPL-3.0+",
  "authors": [
    {
      "name": "Christopher BÃ¶lter",
      "email": "christopher@boelter.eu",
      "homepage": "http://boelter.eu",
      "role": "Developer"
    }
  ],
  "support": {
    "source": "https://github.com/cboelter/contao-leads-optin"
  },
  "require": {
    "php": "^8.1",
    "contao/core-bundle": "^4.13",
    "codefog/contao-haste": "^5.1",
    "terminal42/contao-leads": "^3.0",
    "terminal42/notification_center": "^1.7",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "contao/manager-plugin": "^2.3.1"
  },
  "conflict": {
    "contao/core": "*",
    "contao/manager-plugin": "<2.0 || >=3.0"
  },
  "autoload": {
    "psr-4": {
      "Boelter\\LeadsOptin\\": "src/"
    },
    "classmap": [
      "contao/"
    ],
    "exclude-from-classmap": [
      "contao/config/",
      "contao/dca/",
      "contao/languages/",
      "contao/templates/"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-develop": "1.4.x-dev"
    },
    "contao-manager-plugin": "Boelter\\LeadsOptin\\ContaoManager\\Plugin"
  },
  "config": {
    "allow-plugins": {
      "contao-components/installer": true,
      "php-http/discovery": true,
      "contao-community-alliance/composer-plugin": true,
      "contao/manager-plugin": true
    }
  },
  "scripts": {
    "all": [
      "@ecs",
      "@phpstan"
    ],
    "ecs": "@php tools/ecs/vendor/bin/ecs check src contao --config ecs.php --fix --ansi",
    "phpstan": "@php tools/phpstan/vendor/bin/phpstan analyze --ansi"
  }
}
